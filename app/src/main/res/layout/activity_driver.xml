<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9229B6F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#145EAD"
            android:text="Driver"
            android:textAlignment="center"

            android:textColor="#FFFFFF"
            android:textSize="50sp"></TextView>
        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="151dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:src="@drawable/profile"
            android:layout_marginTop="20dp"/>

        <ImageButton
            android:id="@+id/pickimage1"
            android:layout_width="51dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/back1"
            android:scaleType="fitCenter"
            android:src="@drawable/plus"
            android:text="Pick Image" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="30sp"></TextView>

        <EditText
            android:id="@+id/editText121"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Enter Name"
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="25dp"
            android:text="E- Rickshaw No."
            android:textColor="#000000"
            android:textSize="30sp"></TextView>

        <EditText
            android:id="@+id/editText331"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Enter Rickshaw No."
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />


        <Button
            android:id="@+id/button311"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="SUBMIT"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:visibility="invisible"/>
    </LinearLayout>
</ScrollView>