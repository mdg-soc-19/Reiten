<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup"
    android:background="#9229B6F6">
<TextView
    android:id="@+id/signup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="SIGN UP"
    android:textColor="#000000"
    android:textSize="50sp"
    android:layout_margin="10dp"
    android:background="@drawable/border"></TextView>
l̥
    <Button
        android:id="@+id/button1"
        android:layout_below="@+id/signup"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="As Customer"
        android:textSize="20sp"
        android:background="#FFEB3B"
        android:padding="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"/>

    <View
        android:id="@+id/strip"
        android:layout_width="3dp"
        android:layout_height="300dp"
        android:layout_below="@+id/signup"
        android:layout_toRightOf="@+id/button1"
        android:background="#A9000000"
        android:layout_marginLeft="25dp"></View>
    <Button
        android:id="@+id/button2"
        android:layout_below="@+id/signup"
        android:layout_toRightOf="@+id/strip"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="As Driver"
        android:textSize="20sp"
        android:background="#FFEB3B"
        android:padding="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"/>
</RelativeLayout>