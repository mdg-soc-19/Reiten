<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back1"
    >

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/img1"


        ></ImageView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        lÌ¥
        <Button
            android:id="@+id/button1"
            android:layout_below="@+id/signup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="As Customer"
            android:textSize="20sp"
            android:background="#FFEB3B"
            android:padding="5dp"
            android:layout_marginLeft="30dp"/>

        <View
            android:id="@+id/strip"
            android:layout_width="3dp"
            android:layout_height="55dp"
            android:layout_below="@+id/signup"
            android:layout_toRightOf="@+id/button1"
            android:background="#A9000000"
            android:layout_marginLeft="25dp"></View>
        <Button
            android:id="@+id/button2"
            android:layout_below="@+id/signup"
            android:layout_toRightOf="@+id/strip"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="As Driver"
            android:textSize="20sp"
            android:background="#FFEB3B"
            android:padding="5dp"
            android:layout_marginLeft="30dp"/>
    </RelativeLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_marginTop="20dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.rilixtech.widget.countrycodepicker.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"/>
    <EditText
        android:id="@+id/editText3"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:ems="10"
        android:visibility="invisible"
        android:layout_marginTop="20dp"
        android:hint="Enter Your Mobile No."
        android:inputType="phone" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="37dp"
        android:layout_height="29dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:visibility="invisible"
        android:background="@drawable/back1"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/button1"></ImageButton>
</LinearLayout>
    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:hint="Enter OTP"
        android:padding="4dp"
        android:visibility="invisible"
        android:background="@drawable/border"
        android:inputType="number" />
    <Button
        android:id="@+id/resendOtpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend"
        android:textColor="#000000"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:visibility="invisible"></Button>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"/>
    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="Sending OTP.."
        android:textColor="#969384"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:visibility="invisible"></TextView>
</LinearLayout>


</LinearLayout>